<%= form_for(@message) do |f| %>
  <!-- TODO: Edit error_messages to differentiate between @user and @message -->
  <%# render 'shared/error_messages' %>
  <h4 class="small-margin text-left"> Submit </h4>
  
  <%= f.text_field :tag_number, class:"form-control input-lg small-margin", placeholder:"Tag Number"  %>
  <%= f.text_field :content, class:"form-control input-lg small-margin", placeholder:"Content" %>
  <%= f.hidden_field :user_id %>

  <!-- TODO: Incorporate ui/signed-in.html.erb -->

  <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
<% end %>

<br /><br />Submitting from <%= current_user.first_name %> <%= current_user.last_initial %>